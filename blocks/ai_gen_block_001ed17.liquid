{% doc %}
  @prompt
    I want to have a selected collection field. Then from that attribute I want a section that can act like a header with a selectable logo, I want the logo to be selected, I want the logo to be a link that is also selected, I want to be able to select the logo position, next to the logo I want a description that is selected, I would like the header to have the same account and cart links like i have on the dawn header default make the shopping bag icon the same size as the accounts icon.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-header-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
  }

  .ai-collection-header__container-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
    max-width: 1300px;
    margin: 0 auto;
  }

  .ai-collection-header__left-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.logo_description_gap }}px;
    flex: 1;
  }

  .ai-collection-header__logo-wrapper-{{ ai_gen_id }} {
    flex-shrink: 0;
    {% if block.settings.logo_position == 'left' %}
      order: 1;
    {% else %}
      order: 2;
    {% endif %}
  }

  .ai-collection-header__logo-link-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.logo_width }}px;
  }

  .ai-collection-header__logo-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-collection-header__logo-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.logo_width }}px;
    height: 60px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
  }

  .ai-collection-header__logo-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 100px;
    max-height: 50px;
  }

  .ai-collection-header__description-{{ ai_gen_id }} {
    color: {{ block.settings.description_color }};
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.5;
    margin: 0;
    {% if block.settings.logo_position == 'left' %}
      order: 2;
    {% else %}
      order: 1;
    {% endif %}
  }

  .ai-collection-header__actions-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .ai-collection-header__account-link-{{ ai_gen_id }},
  .ai-collection-header__cart-link-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    color: {{ block.settings.icon_color }};
    position: relative;
  }

  .ai-collection-header__account-link-{{ ai_gen_id }} svg,
  .ai-collection-header__cart-link-{{ ai_gen_id }} svg {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
  }

  .ai-collection-header__cart-count-{{ ai_gen_id }} {
    position: absolute;
    top: -8px;
    right: -8px;
    background-color: {{ block.settings.cart_badge_color }};
    color: {{ block.settings.cart_badge_text_color }};
    border-radius: 50%;
    width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 11px;
    font-weight: 600;
  }

  @media screen and (max-width: 749px) {
    .ai-collection-header__container-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: flex-start;
      gap: 15px;
    }

    .ai-collection-header__left-{{ ai_gen_id }} {
      width: 100%;
      flex-direction: column;
      align-items: flex-start;
      gap: 15px;
    }

    .ai-collection-header__logo-wrapper-{{ ai_gen_id }},
    .ai-collection-header__description-{{ ai_gen_id }} {
      order: unset !important;
    }

    .ai-collection-header__actions-{{ ai_gen_id }} {
      align-self: flex-end;
    }
  }
{% endstyle %}

<collection-header-{{ ai_gen_id }}
  class="ai-collection-header-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-collection-header__container-{{ ai_gen_id }}">
    <div class="ai-collection-header__left-{{ ai_gen_id }}">
      <div class="ai-collection-header__logo-wrapper-{{ ai_gen_id }}">
        {% if block.settings.logo_link != blank %}
          <a
            href="{{ block.settings.logo_link }}"
            class="ai-collection-header__logo-link-{{ ai_gen_id }}"
          >
        {% endif %}
        {% if block.settings.logo %}
          <img
            src="{{ block.settings.logo | image_url: width: 400 }}"
            alt="{{ block.settings.logo.alt | escape }}"
            class="ai-collection-header__logo-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.logo.width }}"
            height="{{ block.settings.logo.height }}"
          >
        {% else %}
          <div class="ai-collection-header__logo-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
        {% if block.settings.logo_link != blank %}
          </a>
        {% endif %}
      </div>

      {% if block.settings.description != blank %}
        <div class="ai-collection-header__description-{{ ai_gen_id }}">
          {{ block.settings.description }}
        </div>
      {% endif %}
    </div>

    <div class="ai-collection-header__actions-{{ ai_gen_id }}">
      <a
        href="{{ routes.account_url }}"
        class="ai-collection-header__account-link-{{ ai_gen_id }}"
        aria-label="Account"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="1.5"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z"
          />
        </svg>
      </a>

      <a
        href="{{ routes.cart_url }}"
        class="ai-collection-header__cart-link-{{ ai_gen_id }}"
        aria-label="Cart"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="1.5"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M15.75 10.5V6a3.75 3.75 0 10-7.5 0v4.5m11.356-1.993l1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 01-1.12-1.243l1.264-12A1.125 1.125 0 015.513 7.5h12.974c.576 0 1.059.435 1.119 1.007zM8.625 10.5a.375.375 0 11-.75 0 .375.375 0 01.75 0zm7.5 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z"
          />
        </svg>
        {% if cart.item_count > 0 %}
          <span class="ai-collection-header__cart-count-{{ ai_gen_id }}">
            {{ cart.item_count }}
          </span>
        {% endif %}
      </a>
    </div>
  </div>
</collection-header-{{ ai_gen_id }}>

<script>
  (function() {
    class CollectionHeader{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.updateCartCount();
        document.addEventListener('cart:updated', () => this.updateCartCount());
      }

      updateCartCount() {
        fetch('/cart.js')
          .then(response => response.json())
          .then(cart => {
            const countElement = this.querySelector('.ai-collection-header__cart-count-{{ ai_gen_id }}');
            if (cart.item_count > 0) {
              if (countElement) {
                countElement.textContent = cart.item_count;
              } else {
                const cartLink = this.querySelector('.ai-collection-header__cart-link-{{ ai_gen_id }}');
                const badge = document.createElement('span');
                badge.className = 'ai-collection-header__cart-count-{{ ai_gen_id }}';
                badge.textContent = cart.item_count;
                cartLink.appendChild(badge);
              }
            } else if (countElement) {
              countElement.remove();
            }
          });
      }
    }

    customElements.define('collection-header-{{ ai_gen_id }}', CollectionHeader{{ ai_gen_id }});
  })();
</script>

