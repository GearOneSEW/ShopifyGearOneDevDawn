{% doc %}
  @prompt
    I want to add a collection description text box, which can be manually entered or selected collection metafield, then select the collect description value and lots of controls for how it is viewed I want to be able to have the text padded on the left and determine how much of the width of the screen it is allowed to fill as a percentage with considerations for mobile and desktop, the percentage fill will only be on desktop, and I want padding options ontop of all that
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-description-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding-top: {{ block.settings.padding_top }}px;
    padding-bottom: {{ block.settings.padding_bottom }}px;
  }

  .ai-collection-description-container-{{ ai_gen_id }} {
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding-left: {{ block.settings.padding_left }}px;
    padding-right: {{ block.settings.padding_right }}px;
  }

  .ai-collection-description-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    line-height: {{ block.settings.line_height }};
    text-align: {{ block.settings.text_alignment }};
  }

  @media screen and (max-width: 749px) {
    .ai-collection-description-container-{{ ai_gen_id }} {
      width: 100%;
      padding-left: {{ block.settings.mobile_padding_left }}px;
      padding-right: {{ block.settings.mobile_padding_right }}px;
    }

    .ai-collection-description-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_font_size }}px;
    }
  }
{% endstyle %}

<collection-description-{{ ai_gen_id }}
  class="ai-collection-description-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-collection-description-container-{{ ai_gen_id }}">
    <div class="ai-collection-description-text-{{ ai_gen_id }}">
      {% if block.settings.description_source == 'manual' %}
        {{ block.settings.manual_description }}
      {% elsif block.settings.description_source == 'collection' and block.settings.selected_collection %}
        {{ block.settings.selected_collection.description }}
      {% elsif block.settings.description_source == 'metafield' and block.settings.selected_collection and block.settings.metafield_namespace != blank and block.settings.metafield_key != blank %}
        {{ block.settings.selected_collection.metafields[block.settings.metafield_namespace][block.settings.metafield_key] }}
      {% else %}
        <p>Add a description to display here</p>
      {% endif %}
    </div>
  </div>
</collection-description-{{ ai_gen_id }}>

{% schema %}
{
  "name": "Collection description",
  "settings": [
    {
      "type": "header",
      "content": "Content source"
    },
    {
      "type": "select",
      "id": "description_source",
      "label": "Description source",
      "options": [
        {
          "value": "manual",
          "label": "Manual entry"
        },
        {
          "value": "collection",
          "label": "Collection description"
        },
        {
          "value": "metafield",
          "label": "Collection metafield"
        }
      ],
      "default": "manual"
    },
    {
      "type": "richtext",
      "id": "manual_description",
      "label": "Manual description",
      "default": "<p>Enter your collection description here</p>"
    },
    {
      "type": "collection",
      "id": "selected_collection",
      "label": "Collection"
    },
    {
      "type": "text",
      "id": "metafield_namespace",
      "label": "Metafield namespace"
    },
    {
      "type": "text",
      "id": "metafield_key",
      "label": "Metafield key"
    },
    {
      "type": "header",
      "content": "Desktop layout"
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_left",
      "label": "Left padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_right",
      "label": "Right padding",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 0
    },
    {
      "type": "header",
      "content": "Mobile layout"
    },
    {
      "type": "range",
      "id": "mobile_padding_left",
      "label": "Left padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "mobile_padding_right",
      "label": "Right padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 20
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 20
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Desktop font size",
      "min": 12,
      "max": 32,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "mobile_font_size",
      "label": "Mobile font size",
      "min": 12,
      "max": 28,
      "step": 1,
      "unit": "px",
      "default": 14
    },
    {
      "type": "range",
      "id": "line_height",
      "label": "Line height",
      "min": 1,
      "max": 2,
      "step": 0.1,
      "default": 1.5
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#121212"
    }
  ],
  "presets": [
    {
      "name": "Collection description"
    }
  ]
}
{% endschema %}
