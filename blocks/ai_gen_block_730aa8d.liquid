{% doc %}
  @prompt
    I want a Multicolumn section within my collection template that has 3 columns, based upon the standard multicolumn section, with the ability to add in a video that plays when hovered, so the final product will have a heading, column 1, column 2, column 3, and a button
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-multicolumn-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
  }

  .ai-multicolumn-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-multicolumn-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
  }

  .ai-multicolumn-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.column_gap }}px;
    margin-bottom: {{ block.settings.button_spacing }}px;
  }

  .ai-multicolumn-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_gap }}px;
  }

  .ai-multicolumn-media-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.media_radius }}px;
    background-color: #f4f4f4;
  }

  .ai-multicolumn-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.media_radius }}px;
  }

  .ai-multicolumn-video-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: {{ block.settings.media_radius }}px;
  }

  .ai-multicolumn-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.media_radius }}px;
  }

  .ai-multicolumn-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-multicolumn-column-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.column_heading_size }}px;
    margin: 0;
    color: {{ block.settings.column_heading_color }};
    text-align: {{ block.settings.column_text_alignment }};
  }

  .ai-multicolumn-column-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.column_text_size }}px;
    margin: 0;
    color: {{ block.settings.column_text_color }};
    text-align: {{ block.settings.column_text_alignment }};
  }

  .ai-multicolumn-button-wrapper-{{ ai_gen_id }} {
    text-align: {{ block.settings.button_alignment }};
  }

  .ai-multicolumn-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    transition: background-color 0.3s ease;
  }

  .ai-multicolumn-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_background_hover }};
  }

  @media screen and (max-width: 989px) {
    .ai-multicolumn-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-multicolumn-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-multicolumn-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.85);
    }
  }
{% endstyle %}

<multicolumn-video-{{ ai_gen_id }} class="ai-multicolumn-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-multicolumn-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-multicolumn-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-multicolumn-grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign image_key = 'column_' | append: i | append: '_image'
          assign video_key = 'column_' | append: i | append: '_video'
          assign heading_key = 'column_' | append: i | append: '_heading'
          assign text_key = 'column_' | append: i | append: '_text'

          assign column_image = block.settings[image_key]
          assign column_video = block.settings[video_key]
          assign column_heading = block.settings[heading_key]
          assign column_text = block.settings[text_key]
        %}

        <div class="ai-multicolumn-column-{{ ai_gen_id }}">
          <div class="ai-multicolumn-media-wrapper-{{ ai_gen_id }}" data-column="{{ i }}">
            {% if column_video != blank %}
              <video
                class="ai-multicolumn-video-{{ ai_gen_id }}"
                muted
                loop
                playsinline
                preload="metadata"
                data-video
              >
                <source src="{{ column_video }}" type="video/mp4">
              </video>
            {% endif %}

            {% if column_image != blank %}
              <img
                src="{{ column_image | image_url: width: 800 }}"
                alt="{{ column_image.alt | escape }}"
                loading="lazy"
                width="{{ column_image.width }}"
                height="{{ column_image.height }}"
                class="ai-multicolumn-image-{{ ai_gen_id }}"
                {% if column_video != blank %}style="display: block;"{% endif %}
                data-image
              >
            {% elsif column_video == blank %}
              <div class="ai-multicolumn-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>

          {% if column_heading != blank %}
            <h3 class="ai-multicolumn-column-heading-{{ ai_gen_id }}">{{ column_heading }}</h3>
          {% endif %}

          {% if column_text != blank %}
            <div class="ai-multicolumn-column-text-{{ ai_gen_id }}">{{ column_text }}</div>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    {% if block.settings.button_label != blank %}
      <div class="ai-multicolumn-button-wrapper-{{ ai_gen_id }}">
        <a href="{{ block.settings.button_link }}" class="ai-multicolumn-button-{{ ai_gen_id }}">
          {{ block.settings.button_label }}
        </a>
      </div>
    {% endif %}
  </div>
</multicolumn-video-{{ ai_gen_id }}>

<script>
  (function() {
    class MulticolumnVideo{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.mediaWrappers = this.querySelectorAll('.ai-multicolumn-media-wrapper-{{ ai_gen_id }}');
        this.setupVideoHover();
      }

      setupVideoHover() {
        this.mediaWrappers.forEach((wrapper) => {
          const video = wrapper.querySelector('[data-video]');
          const image = wrapper.querySelector('[data-image]');

          if (video && image) {
            wrapper.addEventListener('mouseenter', () => {
              image.style.display = 'none';
              video.style.display = 'block';
              video.currentTime = 0;
              video.play().catch(() => {});
            });

            wrapper.addEventListener('mouseleave', () => {
              video.pause();
              video.style.display = 'none';
              image.style.display = 'block';
            });
          }
        });
      }
    }

    customElements.define('multicolumn-video-{{ ai_gen_id }}', MulticolumnVideo{{ ai_gen_id }});
  })();
</script>

