{% doc %}
  @prompt
    I want to add a narrow bar, using an announcment bar style type, with all fields included in the block editor, for a collection link, where you can select 1 collection to reference and link
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-bar-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
  }

  .ai-collection-bar__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
  }

  .ai-collection-bar__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    margin: 0;
    text-align: center;
  }

  .ai-collection-bar__link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: {{ block.settings.link_style }};
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .ai-collection-bar__link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-collection-bar__container-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 8px;
    }

    .ai-collection-bar__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<collection-bar-{{ ai_gen_id }} class="ai-collection-bar-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collection-bar__container-{{ ai_gen_id }}">
    {% if block.settings.announcement_text != blank %}
      <p class="ai-collection-bar__text-{{ ai_gen_id }}">
        {{ block.settings.announcement_text }}
      </p>
    {% endif %}

    {% if block.settings.collection != blank %}
      <a href="{{ block.settings.collection.url }}" class="ai-collection-bar__link-{{ ai_gen_id }}">
        {% if block.settings.link_text != blank %}
          {{ block.settings.link_text }}
        {% else %}
          {{ block.settings.collection.title }}
        {% endif %}
      </a>
    {% else %}
      <span class="ai-collection-bar__link-{{ ai_gen_id }}" style="opacity: 0.5;">
        Select a collection
      </span>
    {% endif %}
  </div>
</collection-bar-{{ ai_gen_id }}>

{% schema %}
{
  "name": "Collection bar",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "announcement_text",
      "label": "Announcement text",
      "default": "New arrivals"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link text",
      "default": "Shop now"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#005cab"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "link_hover_color",
      "label": "Link hover color",
      "default": "#e0e0e0"
    },
    {
      "type": "select",
      "id": "link_style",
      "label": "Link style",
      "options": [
        {
          "value": "none",
          "label": "No underline"
        },
        {
          "value": "underline",
          "label": "Underline"
        }
      ],
      "default": "underline"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "default": 14
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "label": "Vertical padding",
      "min": 8,
      "max": 32,
      "step": 2,
      "unit": "px",
      "default": 12
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Maximum width",
      "min": 800,
      "max": 1600,
      "step": 100,
      "unit": "px",
      "default": 1300
    }
  ],
  "presets": [
    {
      "name": "Collection bar"
    }
  ]
}
{% endschema %}
