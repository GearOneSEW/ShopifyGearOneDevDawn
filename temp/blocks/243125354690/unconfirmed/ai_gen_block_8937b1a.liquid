{% doc %}
  @prompt
    I want to have a selected collection field. Then from that attribute I want a section that can act like a header with a selectable logo and description. I want the logo to be selected, I want the logo to be a link that is selected, I want to be able to select the logo position, I would like the header to have the same account and cart links like i have on the dawn header default make the shopping bag icon the same size as the accounts icon.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-custom-header-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    border-bottom: 1px solid {{ block.settings.border_color }};
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .ai-custom-header__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.vertical_padding }}px {{ block.settings.horizontal_padding }}px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
  }

  .ai-custom-header__logo-section-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 20px;
    {% if block.settings.logo_position == 'left' %}
      order: 1;
    {% elsif block.settings.logo_position == 'center' %}
      order: 2;
      flex: 1;
      justify-content: center;
    {% else %}
      order: 3;
    {% endif %}
  }

  .ai-custom-header__logo-link-{{ ai_gen_id }} {
    display: block;
    line-height: 0;
  }

  .ai-custom-header__logo-{{ ai_gen_id }} {
    width: {{ block.settings.logo_width }}px;
    height: auto;
    display: block;
  }

  .ai-custom-header__logo-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.logo_width }}px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    border-radius: 4px;
  }

  .ai-custom-header__logo-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .ai-custom-header__description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.description_size }}px;
    margin: 0;
    {% if block.settings.logo_position == 'center' %}
      display: none;
    {% endif %}
  }

  .ai-custom-header__icons-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
    {% if block.settings.logo_position == 'left' %}
      order: 3;
    {% elsif block.settings.logo_position == 'center' %}
      order: 3;
    {% else %}
      order: 1;
    {% endif %}
  }

  .ai-custom-header__icon-link-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.icon_color }};
    text-decoration: none;
    position: relative;
    padding: 8px;
    transition: color 0.2s ease;
  }

  .ai-custom-header__icon-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.icon_hover_color }};
  }

  .ai-custom-header__icon-link-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
    display: block;
  }

  .ai-custom-header__cart-count-{{ ai_gen_id }} {
    position: absolute;
    top: 2px;
    right: 2px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    font-size: 11px;
    font-weight: 600;
    min-width: 18px;
    height: 18px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 4px;
  }

  @media screen and (max-width: 749px) {
    .ai-custom-header__container-{{ ai_gen_id }} {
      padding: {{ block.settings.vertical_padding | times: 0.7 }}px {{ block.settings.horizontal_padding | times: 0.7 }}px;
    }

    .ai-custom-header__logo-{{ ai_gen_id }},
    .ai-custom-header__logo-placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.logo_width | times: 0.7 }}px;
    }

    .ai-custom-header__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.85 }}px;
    }

    {% if block.settings.logo_position == 'center' %}
      .ai-custom-header__logo-section-{{ ai_gen_id }} {
        order: 2;
      }
      .ai-custom-header__icons-{{ ai_gen_id }} {
        order: 3;
      }
    {% endif %}
  }
{% endstyle %}

<custom-header-{{ ai_gen_id }} class="ai-custom-header-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-custom-header__container-{{ ai_gen_id }}">
    <div class="ai-custom-header__logo-section-{{ ai_gen_id }}">
      {% if block.settings.logo_link != blank %}
        <a href="{{ block.settings.logo_link }}" class="ai-custom-header__logo-link-{{ ai_gen_id }}">
      {% else %}
        <a href="/" class="ai-custom-header__logo-link-{{ ai_gen_id }}">
      {% endif %}
        {% if block.settings.logo %}
          <img
            src="{{ block.settings.logo | image_url: width: 400 }}"
            alt="{{ shop.name }}"
            class="ai-custom-header__logo-{{ ai_gen_id }}"
            width="{{ block.settings.logo_width }}"
            height="auto"
            loading="eager"
          >
        {% else %}
          <div class="ai-custom-header__logo-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </a>

      {% if block.settings.description != blank and block.settings.logo_position != 'center' %}
        <p class="ai-custom-header__description-{{ ai_gen_id }}">{{ block.settings.description }}</p>
      {% endif %}
    </div>

    <div class="ai-custom-header__icons-{{ ai_gen_id }}">
      <a href="{{ routes.account_url }}" class="ai-custom-header__icon-link-{{ ai_gen_id }}" aria-label="Account">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </a>

      <a href="{{ routes.cart_url }}" class="ai-custom-header__icon-link-{{ ai_gen_id }}" aria-label="Cart">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
        </svg>
        {% if cart.item_count > 0 %}
          <span class="ai-custom-header__cart-count-{{ ai_gen_id }}">{{ cart.item_count }}</span>
        {% endif %}
      </a>
    </div>
  </div>
</custom-header-{{ ai_gen_id }}>

<script>
  (function() {
    class CustomHeader{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.updateCartCount();
        document.addEventListener('cart:updated', () => this.updateCartCount());
      }

      updateCartCount() {
        fetch('/cart.js')
          .then(response => response.json())
          .then(cart => {
            const countElement = this.querySelector('.ai-custom-header__cart-count-{{ ai_gen_id }}');
            if (cart.item_count > 0) {
              if (countElement) {
                countElement.textContent = cart.item_count;
              } else {
                const cartLink = this.querySelector('.ai-custom-header__icon-link-{{ ai_gen_id }}[href="{{ routes.cart_url }}"]');
                if (cartLink) {
                  const badge = document.createElement('span');
                  badge.className = 'ai-custom-header__cart-count-{{ ai_gen_id }}';
                  badge.textContent = cart.item_count;
                  cartLink.appendChild(badge);
                }
              }
            } else if (countElement) {
              countElement.remove();
            }
          })
          .catch(error => console.error('Error updating cart count:', error));
      }
    }

    customElements.define('custom-header-{{ ai_gen_id }}', CustomHeader{{ ai_gen_id }});
  })();
</script>

