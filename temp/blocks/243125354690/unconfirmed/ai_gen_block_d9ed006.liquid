{% doc %}
  @prompt
    I want to have a selected collection field. Then from that attribute I want a section that can act like a header with a selectable logo and description. I want the logo to be selected and able to be tied to a metafield, I want to be able to select the logo position, I would like the header to have the same account and cart links like i have on the dawn header default make the shopping bag icon the same size as the accounts icon.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-header-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    border-bottom: 1px solid {{ block.settings.border_color }};
  }

  .ai-collection-header__container-{{ ai_gen_id }} {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: 16px 20px;
  }

  .ai-collection-header__inner-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
  }

  .ai-collection-header__left-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 24px;
    flex: 1;
    {% if block.settings.logo_position == 'center' %}
      justify-content: center;
    {% elsif block.settings.logo_position == 'right' %}
      justify-content: flex-end;
    {% endif %}
  }

  .ai-collection-header__logo-wrapper-{{ ai_gen_id }} {
    flex-shrink: 0;
    {% if block.settings.logo_position == 'center' %}
      order: 1;
    {% elsif block.settings.logo_position == 'right' %}
      order: 2;
    {% endif %}
  }

  .ai-collection-header__logo-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.logo_width }}px;
    max-width: 100%;
  }

  .ai-collection-header__logo-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-collection-header__logo-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.logo_width }}px;
    max-width: 100%;
    height: 60px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
  }

  .ai-collection-header__logo-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 100px;
    max-height: 50px;
  }

  .ai-collection-header__description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.5;
    margin: 0;
    {% if block.settings.logo_position == 'center' %}
      order: 0;
    {% elsif block.settings.logo_position == 'right' %}
      order: 1;
    {% endif %}
  }

  .ai-collection-header__icons-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
    flex-shrink: 0;
  }

  .ai-collection-header__icon-link-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.icon_color }};
    text-decoration: none;
    position: relative;
  }

  .ai-collection-header__icon-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.icon_hover_color }};
  }

  .ai-collection-header__icon-link-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-collection-header__cart-count-{{ ai_gen_id }} {
    position: absolute;
    top: -8px;
    right: -8px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    border-radius: 50%;
    width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 11px;
    font-weight: 600;
  }

  @media screen and (max-width: 749px) {
    .ai-collection-header__container-{{ ai_gen_id }} {
      padding: 12px 16px;
    }

    .ai-collection-header__inner-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 16px;
    }

    .ai-collection-header__left-{{ ai_gen_id }} {
      width: 100%;
      flex-direction: column;
      text-align: center;
    }

    .ai-collection-header__description-{{ ai_gen_id }} {
      text-align: center;
    }

    .ai-collection-header__icons-{{ ai_gen_id }} {
      width: 100%;
      justify-content: center;
    }
  }
{% endstyle %}

<collection-header-{{ ai_gen_id }}
  class="ai-collection-header-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-collection-header__container-{{ ai_gen_id }}">
    <div class="ai-collection-header__inner-{{ ai_gen_id }}">
      <div class="ai-collection-header__left-{{ ai_gen_id }}">
        <div class="ai-collection-header__logo-wrapper-{{ ai_gen_id }}">
          {% liquid
            assign logo_image = null
            
            if block.settings.use_metafield and block.settings.selected_collection != blank
              assign metafield_value = block.settings.selected_collection.metafields[block.settings.metafield_namespace][block.settings.metafield_key]
              if metafield_value != blank
                assign logo_image = metafield_value
              endif
            endif
            
            if logo_image == null and block.settings.logo != blank
              assign logo_image = block.settings.logo
            endif
          %}

          {% if logo_image != blank %}
            <div class="ai-collection-header__logo-{{ ai_gen_id }}">
              <img
                src="{{ logo_image | image_url: width: 600 }}"
                alt="{{ block.settings.selected_collection.title | default: 'Logo' | escape }}"
                loading="lazy"
                width="{{ block.settings.logo_width }}"
                height="auto"
              >
            </div>
          {% else %}
            <div class="ai-collection-header__logo-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>

        {% if block.settings.description != blank %}
          <div class="ai-collection-header__description-{{ ai_gen_id }}">
            {{ block.settings.description }}
          </div>
        {% endif %}
      </div>

      <div class="ai-collection-header__icons-{{ ai_gen_id }}">
        <a
          href="{{ routes.account_url }}"
          class="ai-collection-header__icon-link-{{ ai_gen_id }}"
          aria-label="Account"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="1.5"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z"
            />
          </svg>
        </a>

        <a
          href="{{ routes.cart_url }}"
          class="ai-collection-header__icon-link-{{ ai_gen_id }}"
          aria-label="Cart"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="1.5"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M15.75 10.5V6a3.75 3.75 0 10-7.5 0v4.5m11.356-1.993l1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 01-1.12-1.243l1.264-12A1.125 1.125 0 015.513 7.5h12.974c.576 0 1.059.435 1.119 1.007zM8.625 10.5a.375.375 0 11-.75 0 .375.375 0 01.75 0zm7.5 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z"
            />
          </svg>
          {% if cart.item_count > 0 %}
            <span class="ai-collection-header__cart-count-{{ ai_gen_id }}">
              {{ cart.item_count }}
            </span>
          {% endif %}
        </a>
      </div>
    </div>
  </div>
</collection-header-{{ ai_gen_id }}>

<script>
  (function() {
    class CollectionHeader{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.cartIcon = this.querySelector('.ai-collection-header__icon-link-{{ ai_gen_id }}[href="{{ routes.cart_url }}"]');
        
        if (this.cartIcon) {
          document.addEventListener('cart:updated', this.updateCartCount.bind(this));
        }
      }

      updateCartCount(event) {
        const cartCount = event.detail?.cart?.item_count || 0;
        const existingBadge = this.cartIcon.querySelector('.ai-collection-header__cart-count-{{ ai_gen_id }}');
        
        if (cartCount > 0) {
          if (existingBadge) {
            existingBadge.textContent = cartCount;
          } else {
            const badge = document.createElement('span');
            badge.className = 'ai-collection-header__cart-count-{{ ai_gen_id }}';
            badge.textContent = cartCount;
            this.cartIcon.appendChild(badge);
          }
        } else if (existingBadge) {
          existingBadge.remove();
        }
      }
    }

    customElements.define('collection-header-{{ ai_gen_id }}', CollectionHeader{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Collection header",
  "settings": [
    {
      "type": "header",
      "content": "Collection"
    },
    {
      "type": "collection",
      "id": "selected_collection",
      "label": "Collection"
    },
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "checkbox",
      "id": "use_metafield",
      "label": "Use collection metafield for logo",
      "default": false
    },
    {
      "type": "text",
      "id": "metafield_namespace",
      "label": "Metafield namespace",
      "default": "custom"
    },
    {
      "type": "text",
      "id": "metafield_key",
      "label": "Metafield key",
      "default": "logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Logo width",
      "default": 150
    },
    {
      "type": "select",
      "id": "logo_position",
      "label": "Logo position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Description"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Explore our collection</p>"
    },
    {
      "type": "range",
      "id": "description_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Description size",
      "default": 14
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border",
      "default": "#e8e8e8"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "icon_hover_color",
      "label": "Icon hover",
      "default": "#005cab"
    },
    {
      "type": "color",
      "id": "badge_background",
      "label": "Cart badge background",
      "default": "#005cab"
    },
    {
      "type": "color",
      "id": "badge_text_color",
      "label": "Cart badge text",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Collection header"
    }
  ]
}
{% endschema %}
