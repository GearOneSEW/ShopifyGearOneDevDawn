{% doc %}
  @prompt
    I want to add a collection description and lots of controls for how it is viewed I want to be able to have the text padded on the left and determine how much of the width of the screen it is allowed to fill as a percentage with considerations for mobile and desktop, the percentage fill will only be on desktop, and I want padding options ontop of all that
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-description-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    box-sizing: border-box;
  }

  .ai-collection-description-container-{{ ai_gen_id }} {
    width: {{ block.settings.desktop_width_percent }}%;
    margin: 0 auto;
    padding-top: {{ block.settings.padding_top }}px;
    padding-bottom: {{ block.settings.padding_bottom }}px;
    padding-left: {{ block.settings.padding_left }}px;
    padding-right: {{ block.settings.padding_right }}px;
    box-sizing: border-box;
  }

  .ai-collection-description-content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    line-height: {{ block.settings.line_height }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-collection-description-content-{{ ai_gen_id }} p {
    margin: 0 0 1em 0;
  }

  .ai-collection-description-content-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-collection-description-empty-{{ ai_gen_id }} {
    color: #999;
    font-style: italic;
    text-align: center;
    padding: 40px 20px;
  }

  @media screen and (max-width: 749px) {
    .ai-collection-description-container-{{ ai_gen_id }} {
      width: 100%;
      padding-left: {{ block.settings.mobile_padding_left }}px;
      padding-right: {{ block.settings.mobile_padding_right }}px;
      padding-top: {{ block.settings.mobile_padding_top }}px;
      padding-bottom: {{ block.settings.mobile_padding_bottom }}px;
    }
  }
{% endstyle %}

<collection-description-{{ ai_gen_id }}
  class="ai-collection-description-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-collection-description-container-{{ ai_gen_id }}">
    {% if collection.description != blank %}
      <div class="ai-collection-description-content-{{ ai_gen_id }}">
        {{ collection.description }}
      </div>
    {% else %}
      <div class="ai-collection-description-empty-{{ ai_gen_id }}">
        Next, add a collection description
      </div>
    {% endif %}
  </div>
</collection-description-{{ ai_gen_id }}>

<script>
  (function() {
    class CollectionDescription{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('collection-description-{{ ai_gen_id }}', CollectionDescription{{ ai_gen_id }});
  })();
</script>

