{% doc %}
  @prompt
    I want to add a collection description from a selected collection metafield, and lots of controls for how it is viewed I want to be able to have the text padded on the left and determine how much of the width of the screen it is allowed to fill as a percentage with considerations for mobile and desktop, the percentage fill will only be on desktop, and I want padding options ontop of all that
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-description-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-collection-description-container-{{ ai_gen_id }} {
    padding-top: {{ block.settings.padding_top }}px;
    padding-bottom: {{ block.settings.padding_bottom }}px;
    padding-left: {{ block.settings.padding_left_mobile }}px;
    padding-right: {{ block.settings.padding_right_mobile }}px;
  }

  .ai-collection-description-content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    line-height: {{ block.settings.line_height }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-collection-description-content-{{ ai_gen_id }} p {
    margin: 0 0 1em 0;
  }

  .ai-collection-description-content-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-collection-description-empty-{{ ai_gen_id }} {
    color: #999;
    font-style: italic;
    text-align: center;
    padding: 40px 20px;
  }

  @media screen and (min-width: 750px) {
    .ai-collection-description-container-{{ ai_gen_id }} {
      padding-left: {{ block.settings.padding_left_desktop }}%;
      padding-right: 0;
      width: {{ block.settings.desktop_width_percent }}%;
    }
  }
{% endstyle %}

<collection-description-{{ ai_gen_id }} class="ai-collection-description-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collection-description-container-{{ ai_gen_id }}">
    {% if block.settings.collection != blank %}
      {% assign selected_metafield = block.settings.collection.metafields[block.settings.metafield_namespace][block.settings.metafield_key] %}
      
      {% if selected_metafield != blank %}
        <div class="ai-collection-description-content-{{ ai_gen_id }}">
          {{ selected_metafield }}
        </div>
      {% else %}
        <div class="ai-collection-description-empty-{{ ai_gen_id }}">
          Next, add content to the selected metafield or choose a different metafield
        </div>
      {% endif %}
    {% else %}
      <div class="ai-collection-description-empty-{{ ai_gen_id }}">
        Next, select a collection
      </div>
    {% endif %}
  </div>
</collection-description-{{ ai_gen_id }}>

<script>
  (function() {
    class CollectionDescription{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }
    customElements.define('collection-description-{{ ai_gen_id }}', CollectionDescription{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Collection description",
  "settings": [
    {
      "type": "header",
      "content": "Collection"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "text",
      "id": "metafield_namespace",
      "label": "Metafield namespace",
      "default": "custom"
    },
    {
      "type": "text",
      "id": "metafield_key",
      "label": "Metafield key",
      "default": "description"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_left_desktop",
      "label": "Desktop left padding",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "%",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_left_mobile",
      "label": "Mobile left padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_right_mobile",
      "label": "Mobile right padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 20
    },
    {
      "type": "header",
      "content": "Text style"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font size",
      "min": 12,
      "max": 32,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "line_height",
      "label": "Line height",
      "min": 1,
      "max": 2,
      "step": 0.1,
      "default": 1.5
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#121212"
    }
  ],
  "presets": [
    {
      "name": "Collection description"
    }
  ]
}
{% endschema %}
