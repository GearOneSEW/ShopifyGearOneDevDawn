{% doc %}
  @prompt
    I want to add in a collection metafield description
    the look and feel of the descritpion should have lots of controls for padding and text size and color and style
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-metafield-desc-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding-top: {{ block.settings.padding_top }}px;
    padding-bottom: {{ block.settings.padding_bottom }}px;
    padding-left: {{ block.settings.padding_left }}px;
    padding-right: {{ block.settings.padding_right }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-collection-metafield-desc__content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    line-height: {{ block.settings.line_height }};
    text-align: {{ block.settings.text_alignment }};
    font-weight: {{ block.settings.font_weight }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
    font-style: {% if block.settings.italic %}italic{% else %}normal{% endif %};
    text-decoration: {% if block.settings.underline %}underline{% else %}none{% endif %};
    text-transform: {{ block.settings.text_transform }};
  }

  .ai-collection-metafield-desc__content-{{ ai_gen_id }} p {
    margin: 0 0 {{ block.settings.paragraph_spacing }}px 0;
  }

  .ai-collection-metafield-desc__content-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-collection-metafield-desc__empty-{{ ai_gen_id }} {
    color: #999;
    font-style: italic;
    text-align: center;
    padding: 20px;
  }

  @media screen and (max-width: 749px) {
    .ai-collection-metafield-desc-{{ ai_gen_id }} {
      padding-top: {{ block.settings.padding_top_mobile }}px;
      padding-bottom: {{ block.settings.padding_bottom_mobile }}px;
      padding-left: {{ block.settings.padding_left_mobile }}px;
      padding-right: {{ block.settings.padding_right_mobile }}px;
    }

    .ai-collection-metafield-desc__content-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size_mobile }}px;
    }
  }
{% endstyle %}

<div
  class="ai-collection-metafield-desc-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if collection.metafields[block.settings.metafield_namespace][block.settings.metafield_key] != blank %}
    <div class="ai-collection-metafield-desc__content-{{ ai_gen_id }}">
      {{ collection.metafields[block.settings.metafield_namespace][block.settings.metafield_key] }}
    </div>
  {% else %}
    <div class="ai-collection-metafield-desc__empty-{{ ai_gen_id }}">
      Next, add a collection metafield namespace and key
    </div>
  {% endif %}
</div>

