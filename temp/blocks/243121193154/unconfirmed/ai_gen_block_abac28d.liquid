{% doc %}
  @prompt
    I want to create a block that has a number of link across it (up to 8). for the links, we will first choose a collection, and then I need to be able to have the links reference that collection.
    
    The links will need to have a link to the selected collection, and then a text box where I can add a suffix for the URL
    
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-links-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
  }

  .ai-collection-links__container-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: {{ block.settings.link_spacing }}px;
    justify-content: {{ block.settings.alignment }};
  }

  .ai-collection-links__link-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.link_padding_vertical }}px {{ block.settings.link_padding_horizontal }}px;
    background-color: {{ block.settings.link_background_color }};
    color: {{ block.settings.link_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.link_border_radius }}px;
    font-size: {{ block.settings.link_font_size }}px;
    transition: all 0.3s ease;
    border: {{ block.settings.link_border_thickness }}px solid {{ block.settings.link_border_color }};
  }

  .ai-collection-links__link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.link_hover_background_color }};
    color: {{ block.settings.link_hover_text_color }};
    border-color: {{ block.settings.link_hover_border_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-collection-links__container-{{ ai_gen_id }} {
      gap: {{ block.settings.link_spacing | times: 0.75 }}px;
    }

    .ai-collection-links__link-{{ ai_gen_id }} {
      font-size: {{ block.settings.link_font_size | times: 0.9 }}px;
      padding: {{ block.settings.link_padding_vertical | times: 0.8 }}px {{ block.settings.link_padding_horizontal | times: 0.8 }}px;
    }
  }
{% endstyle %}

<collection-links-{{ ai_gen_id }}
  class="ai-collection-links-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-collection-links__container-{{ ai_gen_id }}">
    {% for i in (1..8) %}
      {% liquid
        assign link_enabled_key = 'link_' | append: i | append: '_enabled'
        assign collection_key = 'link_' | append: i | append: '_collection'
        assign url_suffix_key = 'link_' | append: i | append: '_url_suffix'
        assign link_text_key = 'link_' | append: i | append: '_text'

        assign link_enabled = block.settings[link_enabled_key]
        assign collection = block.settings[collection_key]
        assign url_suffix = block.settings[url_suffix_key]
        assign link_text = block.settings[link_text_key]
      %}

      {% if link_enabled and collection != blank %}
        {% liquid
          if url_suffix != blank
            assign final_url = collection.url | append: url_suffix
          else
            assign final_url = collection.url
          endif

          if link_text != blank
            assign display_text = link_text
          else
            assign display_text = collection.title
          endif
        %}

        <a
          href="{{ final_url }}"
          class="ai-collection-links__link-{{ ai_gen_id }}"
        >
          {{ display_text }}
        </a>
      {% endif %}
    {% endfor %}
  </div>
</collection-links-{{ ai_gen_id }}>

<script>
  (function() {
    class CollectionLinks{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('collection-links-{{ ai_gen_id }}', CollectionLinks{{ ai_gen_id }});
  })();
</script>

