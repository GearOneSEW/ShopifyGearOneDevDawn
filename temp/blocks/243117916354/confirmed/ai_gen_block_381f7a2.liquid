{% doc %}
  @prompt
    we need to have a selected collection
    then have the collection description field included
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-description-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-collection-description__content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-collection-description__title-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-collection-description__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    text-align: {{ block.settings.text_alignment }};
    line-height: 1.6;
  }

  .ai-collection-description__empty-{{ ai_gen_id }} {
    padding: 40px 20px;
    text-align: center;
    color: #999;
    font-style: italic;
  }

  @media screen and (max-width: 749px) {
    .ai-collection-description-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<collection-description-{{ ai_gen_id }}
  class="ai-collection-description-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.collection != blank %}
    <div class="ai-collection-description__content-{{ ai_gen_id }}">
      {% if block.settings.show_title and block.settings.collection.title != blank %}
        <h2 class="ai-collection-description__title-{{ ai_gen_id }}">
          {{ block.settings.collection.title }}
        </h2>
      {% endif %}

      {% if block.settings.collection.description != blank %}
        <div class="ai-collection-description__text-{{ ai_gen_id }}">
          {{ block.settings.collection.description }}
        </div>
      {% else %}
        <div class="ai-collection-description__empty-{{ ai_gen_id }}">
          This collection doesn't have a description yet
        </div>
      {% endif %}
    </div>
  {% else %}
    <div class="ai-collection-description__empty-{{ ai_gen_id }}">
      Next, select a collection to display its description
    </div>
  {% endif %}
</collection-description-{{ ai_gen_id }}>

<script>
  (function() {
    class CollectionDescription{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }

    customElements.define('collection-description-{{ ai_gen_id }}', CollectionDescription{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Collection description",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Collection"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show collection title",
      "default": true
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Title size",
      "min": 16,
      "max": 48,
      "step": 2,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "description_size",
      "label": "Description size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Padding",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 4
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#f3f3f3"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#121212"
    }
  ],
  "presets": [
    {
      "name": "Collection description"
    }
  ]
}
{% endschema %}
